@using Base.Resources.WebApp
@model WebApp.ViewModels.TransportNeeds.TransportNeedCrudCreateEditViewModel

@{
    ViewData["Title"] = @WebAppUiCommon.Edit;
}

<h1>@WebAppUiCommon.Edit</h1>

<h4>@Resources.BLL.App.DTO.TransportNeed._TransportNeed</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <input type="hidden" asp-for="TransportNeed.Id" />
            @* <input type="hidden" asp-for="TransportNeed.TransportNeedInfoId" /> *@
            
            <partial name="_CreateEdit" model="Model"/>
            
            <div class="form-group">
                <input type="submit" value="@WebAppUiCommon.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@WebAppUiCommon.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
