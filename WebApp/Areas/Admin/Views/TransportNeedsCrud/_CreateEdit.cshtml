@using BLL.App.DTO.Enums
@using Base.Resources.WebApp
@model WebApp.ViewModels.TransportNeeds.TransportNeedCrudCreateEditViewModel

<div class="form-group">
    <label asp-for="TransportNeed.TransportNeedInfo" class="control-label"></label>
    <input asp-for="TransportNeed.TransportNeedInfo" class="form-control"/>
    <span asp-validation-for="TransportNeed.TransportNeedInfo" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TransportNeed.TransportType" class="control-label"></label>
    <select asp-for="TransportNeed.TransportType" asp-items="Html.GetEnumSelectList<ETransportType>()" class="form-control">
        <option>--- @WebAppUiCommon.PleaseSelect ---</option>
    </select>
    <span asp-validation-for="TransportNeed.TransportType" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TransportNeed.PersonCount" class="control-label"></label>
    <input asp-for="TransportNeed.PersonCount" class="form-control"/>
    <span asp-validation-for="TransportNeed.PersonCount" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TransportNeed.TransportMetaId" class="control-label"></label>
    <select asp-for="TransportNeed.TransportMetaId" class="form-control" asp-items="Model.TransportMetaSelectList">
        <option>-- @WebAppUiCommon.PleaseSelect --</option>
    </select>
    <span asp-validation-for="TransportNeed.TransportMetaId" class="text-danger"></span>
</div>