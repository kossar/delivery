@using Base.Resources.WebApp
@model BLL.App.DTO.Location

@{
    ViewData["Title"] = WebAppUiCommon.Delete;
}

<h1>@WebAppUiCommon.Delete</h1>

<h3>@WebAppUiCommon.DeleteConfirmation</h3>
<div>
    <h4>@Resources.BLL.App.DTO.Location._Location</h4>
    <hr />
   <partial name="_Details" model="Model"/>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@WebAppUiCommon.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@WebAppUiCommon.BackToList</a>
    </form> 
</div>
