@using Base.Resources.WebApp
@model WebApp.ViewModels.Transports.TransportCreateEditFromNeedViewModel

<h1>@Resources.Views.Transports.SelectFromYourSavedTransportOffers</h1>

<div class="row p-3">
    <h4 class="text-info mr-3">@Resources.Views.Shared._Layout.Or</h4>
    <a asp-action="VehicleForTransportOffer" asp-controller="TransportOffers" asp-route-transportNeedId="@Model.TransportNeedId">
        <input type="button" value="@Resources.Views.Transports.AddNewTransportOffer" class="btn btn-secondary"/>
    </a>
</div>

<hr/>
<form method="GET" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TransportNeedId">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TransportOfferId" class="control-label"></label>
                <select asp-for="TransportOfferId" class="form-control" asp-items="Model.TransportOfferSelectList">
                    <option value="">-- @WebAppUiCommon.PleaseSelect --</option>
                </select>
                <span asp-validation-for="TransportOfferId" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="@WebAppUiCommon.SaveAndContiue" class="btn btn-primary"/>
    </div>
</form>
<div>
    <a asp-action="Details" asp-controller="TransportNeeds" asp-route-id="@Model.TransportNeedId">@WebAppUiCommon.Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
