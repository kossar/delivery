@using Base.Resources.WebApp
@using Extensions.Base
@model BLL.App.DTO.TransportOffer

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TransportType)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TransportType)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Price)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Price)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FreeSeats)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FreeSeats)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.AvailableLoadCapacity)
    </dt>
    <dd class="col-sm-10">
        @Model.AvailableLoadCapacity @Model.Unit!.UnitCode
    </dd>
    <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransportMeta!.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransportMeta!.StartTime)
        </dd >
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TransportOfferInfo)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TransportOfferInfo)
    </dd>

</dl>

<div class="row">
    <div class="col-12 col-md-6">
        <h4>@Html.DisplayNameFor(model => Model.TransportMeta!.StartLocation)</h4>
        <partial name="_LocationDetails" model="Model!.TransportMeta!.StartLocation"/>
    </div>
    <div class="col-12 col-md-6">
        <h4>@Html.DisplayNameFor(model => Model.TransportMeta!.DestinationLocation)</h4>
        <partial name="_LocationDetails" model="Model!.TransportMeta!.DestinationLocation"/>
    </div>
</div>
<hr/>
