@using BLL.App.DTO.Enums
@using Base.Resources.WebApp
@model WebApp.ViewModels.TransportOffers.TransportOfferCreateEditViewModel
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="TransportOffer.TransportOfferInfo" class="control-label"></label>
            <input asp-for="TransportOffer.TransportOfferInfo" class="form-control"/>
            <span asp-validation-for="TransportOffer.TransportOfferInfo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TransportOffer.TransportType" class="control-label"></label>
            <select asp-for="TransportOffer.TransportType" asp-items="Html.GetEnumSelectList<ETransportType>()" class="form-control">
                <option>--- @WebAppUiCommon.PleaseSelect ---</option>
            </select>
            <span asp-validation-for="TransportOffer.TransportType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TransportOffer.Price" class="control-label"></label>
            <input asp-for="TransportOffer.Price" class="form-control"/>
            <span asp-validation-for="TransportOffer.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TransportOffer.AvailableLoadCapacity" class="control-label"></label>
            <input asp-for="TransportOffer.AvailableLoadCapacity" class="form-control"/>
            <span asp-validation-for="TransportOffer.AvailableLoadCapacity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TransportOffer.UnitId" class="control-label"></label>
            <select asp-for="TransportOffer.UnitId" class="form-control" asp-items="Model.WeightUnitSelectList">
                <option value="">-- @WebAppUiCommon.PleaseSelect --</option>
            </select>
             <span asp-validation-for="TransportOffer.UnitId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TransportOffer.FreeSeats" class="control-label"></label>
            <input asp-for="TransportOffer.FreeSeats" class="form-control"/>
            <span asp-validation-for="TransportOffer.FreeSeats" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TransportMeta.StartTime" class="control-label"></label>
            <input asp-for="TransportMeta.StartTime" class="form-control"/>
            <span asp-validation-for="TransportMeta!.StartTime" class="text-danger"></span>
        </div>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-12 col-md-4">
        <h4>@Html.DisplayNameFor(model => Model.TransportMeta.StartLocation)</h4>
        <partial name="_LocationCreateEdit" for="StartLocation"/>
    </div>
    <div class="col-12 col-md-4">
        <h4>@Html.DisplayNameFor(model => Model.TransportMeta.DestinationLocation)</h4>
        <partial name="_LocationCreateEdit" for="DestinationLocation"/>
    </div>
</div>

<hr/>