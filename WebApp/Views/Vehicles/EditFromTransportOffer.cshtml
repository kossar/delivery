@using Base.Resources.WebApp
@model WebApp.ViewModels.Vehicles.VehicleCreateEditFromTransportOfferViewModel


@{
    ViewData["Title"] = WebAppUiCommon.Edit;
}

<h1>@WebAppUiCommon.Edit</h1>

<h4>@Resources.BLL.App.DTO.Vehicle._Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFromTransportOffer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 
            <input type="hidden" asp-for="Vehicle.Id" />
            <input type="hidden" asp-for="TransportOfferId" />
            
            <partial name="_CreateEdit" model="Model"/>
            <div class="form-group">
                <input type="submit" value="@WebAppUiCommon.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="TransportOffers" asp-route-id="@Model.TransportOfferId">@WebAppUiCommon.Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


