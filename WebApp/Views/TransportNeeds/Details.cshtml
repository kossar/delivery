@using Extensions.Base
@using Base.Resources.WebApp
@model BLL.App.DTO.TransportNeed

@{
    ViewData["Title"] = @WebAppUiCommon.Details;
}

<h1>@WebAppUiCommon.Details</h1>

<div>
    <div class="row">
        <h4>@Resources.BLL.App.DTO.TransportNeed._TransportNeed</h4>
        @if ((User.Identity?.IsAuthenticated ?? false) && User.GetUserId()!.Value == Model.AppUserId)
        {
            <div class="ml-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="align-middle">@WebAppUiCommon.Edit</a>
                <text>|</text>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="text-danger align-middle">@WebAppUiCommon.Delete</a>
            </div>
        }
    </div>
    <hr/>

    <partial name="_Details" model="Model"/>

</div>
@if ((User.Identity?.IsAuthenticated ?? false) && User.GetUserId()!.Value != Model.AppUserId)
{
    <div class="row">
        <div class="col-md-4">
            <a asp-action="StartFromTransportNeed" asp-controller="Transports" asp-route-id="@Model.Id" class="d-block text-capitalize btn btn-success">@Resources.Views.TransportNeeds.TransportNeeds.OfferTransport</a>
        </div>
    </div> 
}

<div>
    <a asp-action="Index">@WebAppUiCommon.BackToList</a>
</div>