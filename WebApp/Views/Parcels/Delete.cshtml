@using Base.Resources.WebApp
@model BLL.App.DTO.Parcel

@{
    ViewData["Title"] = WebAppUiCommon.Delete;
}

<h1>@WebAppUiCommon.Delete</h1>

<h3>@WebAppUiCommon.DeleteConfirmation</h3>
<div>
    <h4>@Resources.BLL.App.DTO.Parcel._Parcel</h4>
    <hr />
    
    <partial name="_ParcelDetails" model="Model"/>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@WebAppUiCommon.Delete" class="btn btn-danger" /> |
        <a asp-controller="TransportNeeds" asp-action="Details" asp-route-id="@Model.TransportNeedId">@WebAppUiCommon.Back</a>
    </form>
</div>
